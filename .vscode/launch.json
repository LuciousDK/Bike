{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Listen for XDebug",
        "type": "php",
        "request": "launch",
        "port": 9000,
        "pathMappings": {
          "/var/www/": "${workspaceFolder}"
        }
      },
      {
        "name": "DDEV XDebug",
        "type": "php",
        "request": "launch",
        "hostname": "0.0.0.0",
        "port": 9003,
        "pathMappings": {
            "/var/www/html": "${workspaceFolder}"
        }
      },
      {
        "name": "Launch currently open script",
        "type": "php",
        "request": "launch",
        "program": "${file}",
        "cwd": "${fileDirname}",
        "port": 9000,
        "pathMappings": {
          "/var/www/": "${workspaceFolder}"
        }
      }
    ]
  }